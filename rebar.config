%%-*- mode: erlang -*-
{erl_opts, [debug_info]}.
{deps, [
        {cowboy, {git, "https://github.com/ninenines/cowboy", {tag, "2.0.0-pre.1"}}},
        {prometeus, {git, "https://github.com/deadtrickster/prometheus.erl.git", {tag, "v4.2.0" }}},
        {jiffy, {git, "https://github.com/davisp/jiffy", {tag, "0.14.11" }}}
       ]}.

{relx, [
        {release, { clusterl, "0.1.0" },
         [
          ssl,
          inets,
          xmerl,
          eunit,
          prometheus,
          cowboy,
          gun,
          sasl,
          cluster
         ]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, false},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.

{overrides, [
             {del, [{erl_opts, [warnings_as_errors]}]}
            ]}.
